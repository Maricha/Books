<div class="col-md-6 col-md-offset-3">

      <div class="new-book-form">

                <h1>Edycja Kom</h1>

                <%= simple_form_for([@book, @review]) do |f| %>
                      <div id="rating-form">
                        <label>Ocena</label>


                    </div>
                      <%= f.input :comment %>
                      <%= f.button :submit, :class => "btn-custom2" %>

                <% end %>
        </div>
</div>

<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>
